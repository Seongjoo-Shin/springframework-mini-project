<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mycompany.webapp.dao.OpeningDao">

	<select id="selectAllKeyword" resultType="keyword">
		select *
		from keywords
	</select>
	
	<select id="selectKeyword" resultType="keyword" parameterType="keyword">
		select *
		from keywords
		where 
			1 = 1 and
		<trim prefix="(" suffixOverrides="or" suffix=")" >
			<if test='keyword1 == 1'>
				keyword1 = 1 or
			</if>
			<if test='keyword2 == 1'>
				keyword2 = 1 or
			</if>
			<if test='keyword3 == 1'>
				keyword3 = 1 or
			</if>
			<if test='keyword4 == 1'>
				keyword4 = 1 or
			</if>
			<if test='keyword5 == 1'>
				keyword5 = 1 or
			</if>
			<if test='keyword6 == 1'>
				keyword6 = 1 or
			</if>
			<if test='keyword7 == 1'>
				keyword7 = 1 or
			</if>
			<if test='keyword8 == 1'>
				keyword8 = 1 or
			</if>
		</trim>
	</select>
</mapper>